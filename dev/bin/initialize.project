set -e

# Check if there are three arguments provided
if [ "$#" -ne 3 ]; then
  echo "Script provided with $# arguments."
  echo "Script requires: "
  echo "1. name small case"
  echo "2. name capital case"
  echo "3. org name small case"
  exit 1
fi
# Example Usage
#./setup.sh paket PAKET orgpaket


find . -type d -name ".git" -prune -o -type f -exec sed -i "s/orgpaket/$3/g" {} \;
find . -type d -name ".git" -prune -o -type d -name *paket*  -print | sed -e "p;s/paket/$1/" | xargs -n2 mv
find . -type d -name ".git" -prune -o -type f -name *paket*  -print | sed -e "p;s/paket/$1/" | xargs -n2 mv
find . -type d -name ".git" -prune -o -type f -exec sed -i "s/paket/$1/g" {} \;
find . -type d -name ".git" -prune -o -type f -exec sed -i "s/PAKET/$2/g" {} \;
